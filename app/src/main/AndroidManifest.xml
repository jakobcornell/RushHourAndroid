<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.duboisproject.rushhour"
>
	<uses-permission android:name="android.permission.NFC" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<application
		android:name="com.duboisproject.rushhour.Application"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@android:style/Theme.Light"
	>
		<activity
			android:name="com.duboisproject.rushhour.activities.MathleteIdActivity"
			android:theme="@style/MathleteScan"
			android:launchMode="singleTop"
			android:screenOrientation="portrait"
		>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.duboisproject.rushhour.activities.CoachIdActivity"
			android:theme="@style/CoachScan"
			android:launchMode="singleTop"
			android:screenOrientation="portrait"
		>
		</activity>
		<activity
			android:name="com.duboisproject.rushhour.activities.CoachCheckActivity"
			android:theme="@style/CoachScan"
			android:launchMode="singleTop"
			android:screenOrientation="portrait"
		>
		</activity>
		<activity
			android:name="com.duboisproject.rushhour.activities.GamePlayActivity"
			android:launchMode="singleTop"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/app_name"
			android:screenOrientation="portrait"
		>
		</activity>
		<activity
			android:name="com.duboisproject.rushhour.activities.MainActivity"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/title_activity_main"
			android:screenOrientation="portrait"
		>
		</activity>
		<activity
			android:name="com.duboisproject.rushhour.activities.FinishedActivity"
			android:screenOrientation="portrait"
			android:label="@string/title_activity_finished"
		>
		</activity>
	</application>
</manifest>
